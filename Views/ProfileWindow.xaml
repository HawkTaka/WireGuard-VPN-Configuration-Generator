<Window x:Class="VPNConfigGen.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPNConfigGen.Views"
        mc:Ignorable="d"
        Title="Server Profile Configuration" Height="600" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Label Content="Profile Name:"/>
            <TextBox Text="{Binding ProfileName}" Margin="0,0,0,10"/>
            
            <Label Content="Server Public Key:"/>
            <TextBox Text="{Binding ServerPublicKey}" TextWrapping="Wrap" Height="60" 
                     VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
            
            <Label Content="Server Endpoint (IP Address):"/>
            <TextBox Text="{Binding ServerEndpoint}" Margin="0,0,0,10"/>
            
            <Label Content="Server Port:"/>
            <TextBox Text="{Binding ServerPort}" Margin="0,0,0,10"/>
            
            <Label Content="Subnet (e.g., 10.0.0.0/24):"/>
            <TextBox Text="{Binding Subnet}" Margin="0,0,0,10"/>
            
            <Label Content="DNS Server:"/>
            <TextBox Text="{Binding DNS}" Margin="0,0,0,10"/>
            
            <Label Content="Allowed IPs:"/>
            <TextBox Text="{Binding AllowedIPs}" Margin="0,0,0,10"/>
            
            <Label Content="Persistent Keepalive:"/>
            <TextBox Text="{Binding PersistentKeepalive}" Margin="0,0,0,10"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Click="OK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>